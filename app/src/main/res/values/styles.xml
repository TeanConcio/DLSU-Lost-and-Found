<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Corner Radius Styles -->
    <style name="Circular">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="RoundedSquare">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>
    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <!-- Calendar Dialog Styles -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Change the header background color -->
        <item name="colorAccent">@color/green_700</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDialogButton</item>
    </style>
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>